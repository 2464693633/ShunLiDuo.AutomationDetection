<Window x:Class="ShunLiDuo.AutomationDetection.Views.ViewPlcMonitorConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="查看PLC监控配置" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="8" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                             BlurRadius="10" 
                             ShadowDepth="3" 
                             Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="查看PLC监控配置"
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="20,0"/>
                    <Button Content="×" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Width="40" 
                           Height="40"
                           Background="Transparent"
                           Foreground="White"
                           FontSize="24"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <TextBlock Text="检测室" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="RoomNameTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="气缸1配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1NameTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1ExtendAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1RetractAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1ExtendFeedbackAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1RetractFeedbackAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder1DataTypeTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="气缸2配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2NameTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2ExtendAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2RetractAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2ExtendFeedbackAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2RetractFeedbackAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="Cylinder2DataTypeTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="传感器配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SensorNameTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SensorAddressTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SensorDataTypeTextBlock" Style="{StaticResource StandardTextBlockStyle}" Margin="0,0,0,15"/>

                    <TextBlock Text="备注" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="RemarkTextBlock" Style="{StaticResource StandardTextBlockStyle}" TextWrapping="Wrap" Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Border Grid.Row="2" 
                   BorderBrush="{StaticResource BorderBrush}" 
                   BorderThickness="0,1,0,0"
                   Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="关闭" 
                           Style="{StaticResource DialogCancelButtonStyle}"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


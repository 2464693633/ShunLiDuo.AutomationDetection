<Window x:Class="ShunLiDuo.AutomationDetection.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:converters="clr-namespace:ShunLiDuo.AutomationDetection.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="顺利多自动化检测系统" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize">
    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:TagEqualsConverter x:Key="TagEqualsConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="30,18"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="DataContext.CurrentBottomNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="LeftNavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="25,18"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Header - 明亮主题 -->
        <Grid Grid.Row="0" 
              Background="#90CAF9" 
              Height="80"
              MouseDown="Header_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧标题 -->
            <TextBlock Grid.Column="0"
                       Text="顺多利自动化检测" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#212121"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"/>
            
            <!-- 中间空白区域 -->
            <Grid Grid.Column="1"/>
            
            <!-- 右侧用户信息和时间 -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,30,0">
                <TextBlock FontSize="14" Foreground="#757575" VerticalAlignment="Center">
                    <Run Text="姓名: "/>
                    <Run Text="{Binding CurrentUserName, Mode=OneWay}" FontWeight="SemiBold" Foreground="#212121"/>
                    <Run Text=" | "/>
                    <Run Text="工号: "/>
                    <Run Text="{Binding CurrentUserEmployeeNo, Mode=OneWay}" FontWeight="SemiBold" Foreground="#212121"/>
                    <Run Text=" | "/>
                    <Run Text="账号: "/>
                    <Run Text="{Binding CurrentUserLoginAccount, Mode=OneWay}" FontWeight="SemiBold" Foreground="#212121"/>
                    <Run Text=" "/>
                    <Run x:Name="CurrentTimeText" Foreground="#757575"/>
                </TextBlock>
            </StackPanel>
            
            <!-- 窗口控制按钮容器 -->
            <StackPanel Grid.Column="3" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,30,0">
                <!-- Window Control Buttons -->

                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Button x:Name="MinimizeButton" 
                        Click="MinimizeButton_Click"
                        ToolTip="最小化"
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#212121"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="—" FontSize="20" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                    <Button x:Name="MaximizeRestoreButton" 
                        Click="MaximizeRestoreButton_Click"
                        ToolTip="最大化/还原"
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#212121"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock x:Name="MaximizeIcon" Text="□" FontSize="16" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                    <Button x:Name="CloseButton" 
                        Click="CloseButton_Click"
                        ToolTip="关闭"
                        Width="46"
                        Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#212121"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="✕" FontSize="16" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Main Content Area - 明亮背景 -->
        <Grid Grid.Row="1" Background="#F5F7FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="240"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLeftNavVisible}" Value="False">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation - 调度规则菜单 -->
            <materialDesign:Card Grid.Column="0" 
                                 Padding="0" 
                                 Margin="0"
                                 materialDesign:ElevationAssist.Elevation="Dp2"
                                 Visibility="{Binding IsLeftNavVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15,20">
                        <!-- 调度规则菜单 -->
                        <StackPanel Visibility="{Binding CurrentMainView, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=RuleManagementView}">
                            <Button Tag="LogisticsBox" 
                                    Command="{Binding NavigateToLogisticsBoxCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                   
                                    <TextBlock Text="物流盒管理" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Tag="DetectionRoom" 
                                    Command="{Binding NavigateToDetectionRoomCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                  
                                    <TextBlock Text="检测室管理" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Tag="RuleManagement" 
                                    Command="{Binding NavigateToRuleManagementCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                  
                                    <TextBlock Text="规则管理" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Tag="CommunicationSettings" 
                                    Command="{Binding NavigateToCommunicationSettingsCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                   
                                    <TextBlock Text="通讯设置" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 检测历史菜单 -->
                        <StackPanel Visibility="{Binding CurrentMainView, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=DetectionLogView}">
                            <Button Tag="DetectionLog" 
                                    Command="{Binding NavigateToDetectionLogCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                   
                                    <TextBlock Text="检测历史记录" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 报警与异常菜单 -->
                        <StackPanel Visibility="{Binding CurrentMainView, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=AlarmView}">
                            <Button Tag="DeviceAlarm" 
                                    Command="{Binding NavigateToDeviceAlarmCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                   
                                    <TextBlock Text="设备报警" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 系统设置菜单 -->
                        <StackPanel Visibility="{Binding CurrentMainView, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=SystemSettingsView}">
                            <Button Tag="AccountManagement" 
                                    Command="{Binding NavigateToAccountManagementCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56"
                                    Visibility="{Binding CanAccessAccountManagement, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                  
                                    <TextBlock Text="账户管理" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Tag="RoleManagement" 
                                    Command="{Binding NavigateToRoleManagementCommand}" 
                                    Margin="0,12"
                                    Padding="20,16"
                                    HorizontalContentAlignment="Left"
                                    MinHeight="56"
                                    Visibility="{Binding CanAccessRoleManagement, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        <Binding Path="DataContext.CurrentLeftNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                   
                                    <TextBlock Text="角色管理" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Main Content Region -->
            <ContentControl Grid.Column="1" 
                          prism:RegionManager.RegionName="MainContentRegion"
                          VerticalAlignment="Stretch"
                          VerticalContentAlignment="Stretch">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Margin" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLeftNavVisible}" Value="True">
                                <Setter Property="Margin" Value="10"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>

        <!-- Footer Navigation - 明亮主题 -->
        <Border Grid.Row="2" 
               Background="#B3E5FC" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,2,0,0"
               Height="100">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Tag="TaskManagement" 
                        Command="{Binding NavigateToTaskCommand}" 
                        Padding="30,20"
                        Margin="30,0"
                        MinHeight="70"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#757575"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                                <DataTrigger Value="True">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                            <Binding Path="DataContext.CurrentBottomNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="任务管理" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#757575"/>
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource TagEqualsConverter}">
                                                <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=Button}"/>
                                                <Binding Path="DataContext.CurrentBottomNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
                <Button Tag="RuleManagement" 
                        Command="{Binding NavigateToRuleCommand}" 
                        Padding="30,20"
                        Margin="30,0"
                        MinHeight="70"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#757575"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                                <DataTrigger Value="True">
                                    <DataTrigger.Binding>

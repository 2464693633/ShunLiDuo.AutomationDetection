<UserControl x:Class="ShunLiDuo.AutomationDetection.Views.TaskManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:ShunLiDuo.AutomationDetection.Converters"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ScanStatusToColorConverter x:Key="ScanStatusToColorConverter"/>

            <Style x:Key="SectionBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="#F8F8F8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="ExecuteButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="30,10"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="#2196F3"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1976D2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="RoomListBoxStyle" TargetType="ListBox">
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="MinWidth" Value="150"/>
                <Setter Property="MinHeight" Value="200"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 扫码录入和检测归属区域 -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Padding="25" 
                Margin="0,0,0,20" 
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" 
                                 BlurRadius="8" 
                                 ShadowDepth="2" 
                                 Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 扫码录入 -->
                <StackPanel Grid.Column="0" Margin="0,0,60,0">
                    <!-- 标题 -->
                    <TextBlock Text="扫码录入" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,25"/>

                    <!-- 物流盒编码 -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                  Text="物流盒编码:" 
                                  Style="{StaticResource StandardLabelStyle}" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                Style="{StaticResource StandardTextBoxStyle}" 
                                Text="{Binding LogisticsBoxCode, UpdateSourceTrigger=PropertyChanged}"
                                Height="42"
                                KeyDown="LogisticsBoxCode_KeyDown"/>
                    </Grid>

                    <!-- 物流盒录入信息 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                  Text="物流盒录入信息:" 
                                  Style="{StaticResource StandardLabelStyle}" 
                                  VerticalAlignment="Top"/>
                        <Border Grid.Column="1"
                               BorderBrush="{StaticResource BorderBrush}"
                               BorderThickness="1"
                               Background="White"
                               CornerRadius="4">
                            <ListBox ItemsSource="{Binding LogisticsBoxList}"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    MinHeight="150"
                                    MaxHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10,8" 
                                               Margin="0,2"
                                               Background="#FAFAFA"
                                               CornerRadius="4">
                                            <TextBlock Text="{Binding}" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- 检测归属 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" 
                              Content="检测归属" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,25"/>
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                            <!-- 初始化按钮 -->
                            <Button Content="初始化" 
                                   Command="{Binding InitializeCommand}"
                                   Padding="20,10"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Right"
                                   MinWidth="100"
                                   Height="40">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="IsEnabled" Value="{Binding IsPlcConnected, Mode=OneWay}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"
                                                                        Content="{TemplateBinding Content}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45a049"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsInitializing}" Value="True">
                                                <Setter Property="Content" Value="初始化中..."/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- PLC连接状态指示器 -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,10">
                                <Ellipse x:Name="PlcStatusIndicator" Width="20" Height="20" 
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Red"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlcConnected, Mode=OneWay}" Value="True">
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock FontSize="18"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"
                                          Foreground="{StaticResource TextPrimaryBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="PLC未连接"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlcConnected, Mode=OneWay}" Value="True">
                                                    <Setter Property="Text" Value="PLC已连接"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                        <ItemsControl ItemsSource="{Binding RoomBoxLists}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="8" 
                                           Background="White"
                                           BorderBrush="{StaticResource BorderBrush}"
                                           BorderThickness="1"
                                           CornerRadius="6"
                                           Padding="15">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#15000000" 
                                                             BlurRadius="4" 
                                                             ShadowDepth="1" 
                                                             Opacity="0.08"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <Label Content="{Binding Room.RoomName}" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,10"/>
                                            
                                            <!-- 扫码状态显示 -->
                                            <Border Background="#FAFAFA" 
                                                   BorderBrush="{StaticResource BorderBrush}" 
                                                   BorderThickness="1" 
                                                   CornerRadius="4" 
                                                   Padding="12" 
                                                   Margin="0,0,0,10">
                                            <StackPanel>
                                                <TextBlock Text="扫码编码:" 
                                                          FontSize="13" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding LastScannedCode, FallbackValue='等待扫码'}" 
                                                          FontSize="15" 
                                                          FontWeight="Medium"
                                                          Foreground="{Binding ScanStatus, Converter={StaticResource ScanStatusToColorConverter}}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding ScanStatus, FallbackValue='等待扫码'}" 
                                                          FontSize="12" 
                                                          Foreground="{Binding ScanStatus, Converter={StaticResource ScanStatusToColorConverter}}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border BorderBrush="{StaticResource BorderBrush}"
                                               BorderThickness="1"
                                               Background="White"
                                               CornerRadius="4">
                                            <ListBox ItemsSource="{Binding Boxes}" 
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    Width="200"
                                                    MaxHeight="200"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="8,6" 
                                                               Margin="2"
                                                               Background="#FAFAFA"
                                                               CornerRadius="3">
                                                            <TextBlock Text="{Binding}" 
                                                                      FontSize="14"
                                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                    </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 任务列表 -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Padding="25" 
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" 
                                 BlurRadius="8" 
                                 ShadowDepth="2" 
                                 Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                      Content="任务列表" 
                      FontSize="20" 
                      FontWeight="SemiBold" 
                      Foreground="{StaticResource TextPrimaryBrush}"
                      Margin="0,0,0,20"/>

                <Border Grid.Row="1"
                       BorderBrush="{StaticResource BorderBrush}"
                       BorderThickness="1"
                       Background="White"
                       CornerRadius="4">
                    <DataGrid ItemsSource="{Binding Tasks}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             GridLinesVisibility="None"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             IsReadOnly="True"
                             RowHeight="55"
                             BorderThickness="0"
                             Background="Transparent"
                             CellStyle="{StaticResource DataGridCellStyle}"
                             ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowStyle}">
                                <Setter Property="Padding" Value="0,5"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="MinHeight" Value="55"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding Id}" Width="100" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="物流盒编码" Binding="{Binding LogisticsBoxCode}" Width="200" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测人信息" Binding="{Binding InspectorName}" Width="180" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测开始时间" Binding="{Binding StartTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="200" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测室1状态" Binding="{Binding Room1Status}" Width="200" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测室2状态" Binding="{Binding Room2Status}" Width="170" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测室3状态" Binding="{Binding Room3Status}" Width="170" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测室4状态" Binding="{Binding Room4Status}" Width="170" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测室5状态" Binding="{Binding Room5Status}" Width="170" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                        <DataGridTextColumn Header="检测结束时间" Binding="{Binding EndTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="200" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                    </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>


<UserControl x:Class="ShunLiDuo.AutomationDetection.Views.TaskManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="SectionBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="#F8F8F8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
            <Style x:Key="ExecuteButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="30,10"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="#2196F3"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1976D2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="RoomListBoxStyle" TargetType="ListBox">
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="MinWidth" Value="150"/>
                <Setter Property="MinHeight" Value="200"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="White" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- 扫码录入和检测归属区域 -->
        <Border Grid.Row="0" 
                Background="#F8F8F8" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Padding="20" 
                Margin="0,0,0,15" 
                CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 扫码录入 -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="扫码录入" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="调度规则:" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,8"/>
                    <ComboBox Style="{StaticResource StandardComboBoxStyle}" 
                             ItemsSource="{Binding Rules}"
                             DisplayMemberPath="RuleName"
                             SelectedItem="{Binding SelectedRuleItem}"
                             Margin="0,0,0,15"
                             Height="36"/>
                    
                    <TextBlock Text="物流盒编码:" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource StandardTextBoxStyle}" 
                            Text="{Binding LogisticsBoxCode, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,15"
                            Height="36"
                            KeyDown="LogisticsBoxCode_KeyDown"/>
                    
                    <TextBlock Text="物流盒录入信息:" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding LogisticsBoxList}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Background="White"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            MinHeight="150"
                            MaxHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                          FontSize="13"
                                          Padding="5,3"
                                          Margin="0,2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- 检测归属 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="检测归属" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Grid.Column="1" Content="执行" Style="{StaticResource ExecuteButtonStyle}" 
                               Command="{Binding ExecuteCommand}" Margin="0,0,0,10"/>
                    </Grid>
                    
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="5">
                                <Label Content="检测室1" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ListBox Style="{StaticResource RoomListBoxStyle}" 
                                        ItemsSource="{Binding Room1Boxes}"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="检测室2" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ListBox Style="{StaticResource RoomListBoxStyle}" 
                                        ItemsSource="{Binding Room2Boxes}"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="检测室3" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ListBox Style="{StaticResource RoomListBoxStyle}" 
                                        ItemsSource="{Binding Room3Boxes}"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="检测室4" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ListBox Style="{StaticResource RoomListBoxStyle}" 
                                        ItemsSource="{Binding Room4Boxes}"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="检测室5" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ListBox Style="{StaticResource RoomListBoxStyle}" 
                                        ItemsSource="{Binding Room5Boxes}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 任务列表 -->
        <Border Grid.Row="1" 
                Background="#F8F8F8" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" 
                Padding="20" 
                CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" Content="任务列表" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Tasks}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         GridLinesVisibility="All"
                         HeadersVisibility="Column"
                         SelectionMode="Single"
                         IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="物流盒编码" Binding="{Binding LogisticsBoxCode}" Width="120"/>
                        <DataGridTextColumn Header="检测人信息" Binding="{Binding InspectorName}" Width="120"/>
                        <DataGridTextColumn Header="检测开始时间" Binding="{Binding StartTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                        <DataGridTextColumn Header="检测室1状态" Binding="{Binding Room1Status}" Width="100"/>
                        <DataGridTextColumn Header="检测室2状态" Binding="{Binding Room2Status}" Width="100"/>
                        <DataGridTextColumn Header="检测室3状态" Binding="{Binding Room3Status}" Width="100"/>
                        <DataGridTextColumn Header="检测室4状态" Binding="{Binding Room4Status}" Width="100"/>
                        <DataGridTextColumn Header="检测室5状态" Binding="{Binding Room5Status}" Width="100"/>
                        <DataGridTextColumn Header="检测结束时间" Binding="{Binding EndTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                        <DataGridTemplateColumn Header="操作" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="重新检测" Foreground="{StaticResource InfoBrush}" 
                                              Cursor="Hand" 
                                              MouseLeftButtonDown="ReInspect_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>


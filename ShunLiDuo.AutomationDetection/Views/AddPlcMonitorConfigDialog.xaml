<Window x:Class="ShunLiDuo.AutomationDetection.Views.AddPlcMonitorConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="新增PLC监控配置" Height="900" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="8" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                             BlurRadius="10" 
                             ShadowDepth="3" 
                             Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock"
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="20,0"/>
                    <Button Content="×" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Width="40" 
                           Height="40"
                           Background="Transparent"
                           Foreground="White"
                           FontSize="24"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <!-- 检测室选择 -->
                    <TextBlock Text="检测室 *" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="RoomComboBox" 
                             Style="{StaticResource StandardComboBoxStyle}"
                             DisplayMemberPath="RoomName"
                             SelectedValuePath="Id"
                             Margin="0,0,0,15"/>

                    <!-- 气缸1配置 -->
                    <TextBlock Text="气缸1配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder1NameTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder1ExtendAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder1RetractAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder1ExtendFeedbackAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder1RetractFeedbackAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="Cylinder1DataTypeComboBox" 
                             Style="{StaticResource StandardComboBoxStyle}"
                             Margin="0,0,0,15">
                        <ComboBoxItem Content="Bool" IsSelected="True"/>
                        <ComboBoxItem Content="Byte"/>
                        <ComboBoxItem Content="Short"/>
                        <ComboBoxItem Content="Int"/>
                        <ComboBoxItem Content="Float"/>
                    </ComboBox>

                    <!-- 气缸2配置 -->
                    <TextBlock Text="气缸2配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder2NameTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder2ExtendAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回控制地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder2RetractAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="伸出到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder2ExtendFeedbackAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="缩回到位反馈地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="Cylinder2RetractFeedbackAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="Cylinder2DataTypeComboBox" 
                             Style="{StaticResource StandardComboBoxStyle}"
                             Margin="0,0,0,15">
                        <ComboBoxItem Content="Bool" IsSelected="True"/>
                        <ComboBoxItem Content="Byte"/>
                        <ComboBoxItem Content="Short"/>
                        <ComboBoxItem Content="Int"/>
                        <ComboBoxItem Content="Float"/>
                    </ComboBox>

                    <!-- 传感器配置 -->
                    <TextBlock Text="传感器配置" Style="{StaticResource StandardLabelStyle}" Margin="0,10,0,5" FontWeight="Bold"/>
                    <TextBlock Text="名称" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="SensorNameTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="地址" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="SensorAddressTextBox" Style="{StaticResource DialogTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="数据类型" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SensorDataTypeComboBox" 
                             Style="{StaticResource StandardComboBoxStyle}"
                             Margin="0,0,0,15">
                        <ComboBoxItem Content="Bool" IsSelected="True"/>
                        <ComboBoxItem Content="Byte"/>
                        <ComboBoxItem Content="Short"/>
                        <ComboBoxItem Content="Int"/>
                        <ComboBoxItem Content="Float"/>
                    </ComboBox>

                    <!-- 备注 -->
                    <TextBlock Text="备注" Style="{StaticResource StandardLabelStyle}" Margin="0,0,0,5"/>
                    <TextBox x:Name="RemarkTextBox" 
                            Style="{StaticResource DialogTextAreaStyle}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Height="60"
                            Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Border Grid.Row="2" 
                   BorderBrush="{StaticResource BorderBrush}" 
                   BorderThickness="0,1,0,0"
                   Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="取消" 
                           Style="{StaticResource DialogCancelButtonStyle}"
                           Click="CancelButton_Click"
                           Margin="0,0,10,0"/>
                    <Button Content="确定" 
                           Style="{StaticResource DialogConfirmButtonStyle}"
                           Click="ConfirmButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


<Window x:Class="ShunLiDuo.AutomationDetection.Views.AddDetectionRoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="新增检测室" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="550">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource StandardLabelStyle}">
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DialogTextBoxStyle}"/>
            <Style x:Key="TextAreaStyle" TargetType="TextBox" BasedOn="{StaticResource DialogTextAreaStyle}"/>
            <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogCancelButtonStyle}"/>
            <Style x:Key="ConfirmButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogConfirmButtonStyle}"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="8" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                             BlurRadius="10" 
                             ShadowDepth="3" 
                             Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock"
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="20,0"/>
                    <Button Content="×" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Width="40" 
                           Height="40"
                           Background="Transparent"
                           Foreground="White"
                           FontSize="24"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="0,8,0,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E53935"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

        <!-- 检测室编号 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="检测室编号" Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Column="1" 
                    Text="{Binding RoomNo, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"/>
        </Grid>

        <!-- 检测室名称 -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="检测室名称" Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Column="1" 
                    Text="{Binding RoomName, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"/>
        </Grid>

        <!-- 备注 -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="备注" Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Column="1" 
                    Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextAreaStyle}"/>
        </Grid>

        <!-- 扫码器配置（可折叠） -->
        <Expander Grid.Row="3" 
                 Header="扫码器配置" 
                 IsExpanded="False"
                 Margin="0,0,0,15">
            <StackPanel Margin="10,10,0,0">
                <!-- 启用扫码器 -->
                <Grid Margin="0,0,0,15">
                    <CheckBox Content="启用扫码器" 
                             IsChecked="{Binding ScannerIsEnabled}"/>
                </Grid>

                <!-- 串口号 -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="串口号" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailablePorts}"
                             SelectedItem="{Binding ScannerPortName}"
                             Style="{StaticResource StandardComboBoxStyle}"/>
                </Grid>

                <!-- 波特率 -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="波特率" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailableBaudRates}"
                             SelectedItem="{Binding ScannerBaudRate}"
                             Style="{StaticResource StandardComboBoxStyle}"/>
                </Grid>

                <!-- 数据位 -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="数据位" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailableDataBits}"
                             SelectedItem="{Binding ScannerDataBits}"
                             Style="{StaticResource StandardComboBoxStyle}"/>
                </Grid>

                <!-- 停止位 -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="停止位" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailableStopBits}"
                             SelectedItem="{Binding ScannerStopBits}"
                             Style="{StaticResource StandardComboBoxStyle}"/>
                </Grid>

                <!-- 校验位 -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="校验位" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailableParities}"
                             SelectedItem="{Binding ScannerParity}"
                             Style="{StaticResource StandardComboBoxStyle}"/>
                </Grid>
            </StackPanel>
        </Expander>

                </Grid>
            </ScrollViewer>

            <!-- 底部按钮 -->
            <Border Grid.Row="2" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,1,0,0"
                    Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="取消" Style="{StaticResource CancelButtonStyle}" 
                           Click="CancelButton_Click" Margin="0,0,10,0"/>
                    <Button Content="确定" Style="{StaticResource ConfirmButtonStyle}" 
                           Click="ConfirmButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


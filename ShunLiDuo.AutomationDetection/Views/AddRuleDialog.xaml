<Window x:Class="ShunLiDuo.AutomationDetection.Views.AddRuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="新增规则" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        d:DesignHeight="600" d:DesignWidth="550">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource StandardLabelStyle}">
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
            <Style x:Key="RequiredLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelStyle}">
                <Setter Property="Foreground" Value="Red"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DialogTextBoxStyle}"/>
            <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource DialogComboBoxStyle}"/>
            <Style x:Key="TextAreaStyle" TargetType="TextBox" BasedOn="{StaticResource DialogTextAreaStyle}"/>
            <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogCancelButtonStyle}"/>
            <Style x:Key="ConfirmButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogConfirmButtonStyle}"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                             BlurRadius="20" 
                             ShadowDepth="5" 
                             Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="12,12,0,0">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock"
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              Margin="20,0"/>
                    <Button Content="×" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"
                           Width="40" 
                           Height="40"
                           Background="Transparent"
                           Foreground="White"
                           FontSize="24"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="0,12,0,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E53935"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="30"
                         Padding="0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

        <!-- 规则编号 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="规则编号" Style="{StaticResource LabelStyle}"/>
                <TextBlock Text="*" Style="{StaticResource RequiredLabelStyle}"/>
            </StackPanel>
            <TextBox Grid.Column="1" 
                    Text="{Binding RuleNo, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"/>
        </Grid>

        <!-- 规则名称 -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="规则名称" Style="{StaticResource LabelStyle}"/>
                <TextBlock Text="*" Style="{StaticResource RequiredLabelStyle}"/>
            </StackPanel>
            <TextBox Grid.Column="1" 
                    Text="{Binding RuleName, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"/>
        </Grid>

        <!-- 检测室 -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,5,0,0">
                <TextBlock Text="检测室" Style="{StaticResource LabelStyle}"/>
                <TextBlock Text="*" Style="{StaticResource RequiredLabelStyle}"/>
            </StackPanel>
            <Border Grid.Column="1" 
                   BorderBrush="{StaticResource BorderBrush}" 
                   BorderThickness="1" 
                   Background="White"
                   MaxHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DetectionRoomSelectItems}" Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding RoomName}" 
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 物流盒编号 -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,5,0,0">
                <TextBlock Text="物流盒编号" Style="{StaticResource LabelStyle}"/>
                <TextBlock Text="*" Style="{StaticResource RequiredLabelStyle}"/>
            </StackPanel>
            <Border Grid.Column="1" 
                   BorderBrush="{StaticResource BorderBrush}" 
                   BorderThickness="1" 
                   Background="White"
                   MaxHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LogisticsBoxSelectItems}" Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding BoxNo}" 
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 备注 -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="备注" Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Column="1" 
                    Text="{Binding Remark, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextAreaStyle}"/>
        </Grid>

                </Grid>
            </ScrollViewer>

            <!-- 底部按钮 -->
            <Border Grid.Row="2" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,1,0,0"
                    Background="#FAFAFA"
                    Padding="30,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="取消" Style="{StaticResource CancelButtonStyle}" 
                           Click="CancelButton_Click" Margin="0,0,15,0"/>
                    <Button Content="确定" Style="{StaticResource ConfirmButtonStyle}" 
                           Click="ConfirmButton_Click"
                           IsEnabled="{Binding IsValid}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


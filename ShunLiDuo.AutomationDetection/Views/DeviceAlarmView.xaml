<UserControl x:Class="ShunLiDuo.AutomationDetection.Views.DeviceAlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Background="White" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tabs -->
        <TabControl Grid.Row="0" Margin="0,0,0,15" Style="{StaticResource StandardTabControlStyle}">
            <TabItem Content="设备报警列表" Style="{StaticResource StandardTabItemStyle}" IsSelected="True"/>
        </TabControl>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                    Style="{StaticResource StandardTextBoxStyle}"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="1" Content="查询" 
                   Style="{StaticResource PrimaryButtonStyle}"
                   Margin="0,0,10,0"/>
            <Button Grid.Column="2" Content="新增" 
                   Style="{StaticResource PrimaryButtonStyle}"/>
        </Grid>

        <!-- Data Grid -->
        <DataGrid Grid.Row="2" 
                 Style="{StaticResource StandardDataGridStyle}"
                 Margin="0"
                 RowStyle="{StaticResource DataGridRowStyle}"
                 CellStyle="{StaticResource DataGridCellStyle}"
                 ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Width="50"/>
                <DataGridTextColumn Header="序号" Width="70" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="设备名称" Width="140" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="报警类型" Width="140" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="报警级别" Width="110" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="报警时间" Width="170" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="状态" Width="100" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTextColumn Header="备注" Width="*" ElementStyle="{StaticResource DataGridTextColumnElementStyle}"/>
                <DataGridTemplateColumn Header="操作" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="处理" Foreground="{StaticResource SuccessBrush}" 
                                          Style="{StaticResource LinkButtonStyle}"/>
                                <TextBlock Text="查看" Foreground="{StaticResource InfoBrush}" 
                                          Style="{StaticResource LinkButtonStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,15,0,0" Height="40">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="共0条" 
                          VerticalAlignment="Center" 
                          FontSize="13"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          Margin="0,0,20,0"/>
                <Button Content="&lt;" Style="{StaticResource PaginationButtonStyle}"/>
                <Button Content="1" Style="{StaticResource ActivePaginationButtonStyle}"/>
                <Button Content="&gt;" Style="{StaticResource PaginationButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>


<Window x:Class="ShunLiDuo.AutomationDetection.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示" Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="White" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                             BlurRadius="20" 
                             ShadowDepth="5" 
                             Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{Binding IconBrush, RelativeSource={RelativeSource AncestorType=Window}}" 
                    CornerRadius="12,12,0,0">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock" 
                              Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Margin="20,0"/>
                    <Button x:Name="CloseButton"
                           Content="✕"
                           Width="30"
                           Height="30"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="16"
                           Cursor="Hand"
                           Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <Grid Grid.Row="1" Margin="30,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 图标 -->
                <Border Grid.Column="0"
                       Width="60"
                       Height="60"
                       Background="{Binding IconBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                       CornerRadius="30"
                       Margin="0,0,20,0"
                       VerticalAlignment="Top">
                    <TextBlock x:Name="IconTextBlock"
                              Text="!"
                              FontSize="36"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                
                <!-- 消息文本 -->
                <TextBlock x:Name="MessageTextBlock"
                          Grid.Column="1"
                          Text="{Binding Message, RelativeSource={RelativeSource AncestorType=Window}}"
                          TextWrapping="Wrap"
                          FontSize="16"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          VerticalAlignment="Top"
                          LineHeight="24"/>
            </Grid>

            <!-- 按钮区域 -->
            <Border Grid.Row="2" 
                   Background="#F5F5F5"
                   CornerRadius="0,0,12,12"
                   Padding="20,15">
                <StackPanel x:Name="ButtonPanel"
                           Orientation="Horizontal"
                           HorizontalAlignment="Right">
                    <!-- 按钮将在代码中动态添加 -->
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

